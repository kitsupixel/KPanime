<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="pt.kitsupixel.kpanime.ui.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/latestFragment"
        android:name="pt.kitsupixel.kpanime.ui.latest.LatestFragment"
        android:label="latest_fragment"
        tools:layout="@layout/latest_fragment" />
    <fragment
        android:id="@+id/currentFragment"
        android:name="pt.kitsupixel.kpanime.ui.current.CurrentFragment"
        android:label="current_fragment"
        tools:layout="@layout/current_fragment" />
    <fragment
        android:id="@+id/showsFragment"
        android:name="pt.kitsupixel.kpanime.ui.shows.ShowsFragment"
        android:label="shows_fragment"
        tools:layout="@layout/shows_fragment" />
    <activity
        android:id="@+id/detailActivity"
        android:name="pt.kitsupixel.kpanime.ui.detail.DetailActivity"
        android:label="activity_detail"
        tools:layout="@layout/activity_detail">
        <argument
            android:name="showId"
            android:defaultValue="0L"
            app:argType="long" />
    </activity>
    <action
        android:id="@+id/action_global_detailActivity"
        app:destination="@id/detailActivity" />
    <activity
        android:id="@+id/episodeActivity"
        android:name="pt.kitsupixel.kpanime.ui.episode.EpisodeActivity"
        android:label="activity_episode"
        tools:layout="@layout/activity_episode">
        <argument
            android:name="showId"
            android:defaultValue="0L"
            app:argType="long" />
        <argument
            android:name="episodeId"
            android:defaultValue="0L"
            app:argType="long" />
    </activity>
</navigation>