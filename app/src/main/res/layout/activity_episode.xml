<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="pt.kitsupixel.kpanime.ui.episode.EpisodeActivity">

    <data>

        <variable
            name="viewModel"
            type="pt.kitsupixel.kpanime.ui.episode.EpisodeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:background="#222222"
        android:gravity="center_horizontal|top">

        <TextView
            android:id="@+id/episode_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/CustomHeadline5"
            android:textColor="@color/colorTextPrimaryDark"
            app:formatText="@{viewModel.episode.number}"
            tools:text="Episode 001" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/episode_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/episode_text_view"
            android:layout_marginTop="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/episode_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/link_item" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <ProgressBar
            android:id="@+id/episode_loading_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:goneIfNotNull="@{viewModel.links}" />

    </RelativeLayout>
</layout>
