<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="link"
            type="pt.kitsupixel.kpanime.domain.Link" />

        <variable
            name="clickListener"
            type="pt.kitsupixel.kpanime.adapters.LinkItemClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="#222222"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/quality_link"
                style="@style/CustomHeadline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mdPadding"
                android:layout_marginTop="@dimen/lgPadding"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{link.quality}"
                android:textAlignment="viewStart"
                android:textColor="@color/colorTextPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="360p" />

            <TextView
                android:id="@+id/link_type"
                style="@style/CustomHeadline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mdPadding"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{link.type}"
                android:textAlignment="viewStart"
                android:textColor="@color/colorTextPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/quality_link"
                app:layout_constraintStart_toEndOf="@+id/quality_link"
                tools:text="Torrent" />

            <TextView
                android:id="@+id/episode_date"
                style="@style/CustomHeadline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mdPadding"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/colorTextPrimaryDark"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/link_type"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="10/10/18" />

            <View
                android:id="@+id/clickableOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> clickListener.onClick(link)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>