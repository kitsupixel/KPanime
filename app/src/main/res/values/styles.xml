<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>

        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AppTheme.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colorTextPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
        <item name="tint">@color/colorTextPrimaryDark</item>
    </style>

    <style name="AppTheme.BottomNavigationBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@color/colorTextPrimaryDark</item>
        <item name="itemTextColor">@color/colorTextPrimaryDark</item>
    </style>

    <style name="TextAppearance.ItemTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.ReleaseItem">

    </style>

    <style name="CustomHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
    </style>

    <style name="CustomHeadline6" parent="CustomHeadline5">
        <item name="android:textSize">18sp</item>
    </style>
</resources>