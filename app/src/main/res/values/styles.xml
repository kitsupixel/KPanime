<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/secondaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="colorSurface">@color/secondaryTextColor</item>
        <item name="android:colorBackground">@color/secondaryColor</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored" >
        <item name="itemBackground">@color/primaryColor</item>
    </style>

    <style name="TextAppearance.ItemTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="CustomHeadline6" parent="CustomHeadline5">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.EpisodeItem">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryTextColor</item>
    </style>

</resources>
